{
    "name": "drush/example-drush-extension",
    "description": "Example Drush site-wide extension",
    "type": "drupal-drush",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Greg Anderson"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ],
    "require": {
        "php": ">=5.6",
        "consolidation/annotated-command": "^2.12.0",
        "drupal/examples": "1.x-dev",
        "drush/drush": "dev-master"
    },
    "require-dev": {
        "composer/installers": "^1.2",
        "phpunit/phpunit": "^6.5",
        "g1a/composer-test-scenarios": "^3.0.2",
        "cweagans/composer-patches": "^1.6.5",
        "drupal-composer/drupal-scaffold": "^2.5",
        "drupal/core": "^8.6.0",
        "webflo/drupal-finder": "^1.1.0",
        "webmozart/path-util": "^2.3",
        "zaporylie/composer-drupal-optimizations": "^1.0.2",
        "webflo/drupal-core-require-dev": "^8.6.0"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "platform": {
          "php": "7.1"
        },
        "sort-packages": true
    },
    "autoload-dev": {
        "classmap": [
            "tests/scripts/composer/ScriptHandler.php"
        ],
        "psr-4": {
          "TestUtils\\": "tests/src/"
        }
    },
    "scripts": {
        "test": "phpunit --color=always",
        "drush": "drush",
        "post-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "post-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ]
    },
    "extra": {
        "composer-exit-on-patch-failure": true,
        "patchLevel": {
            "drupal/core": "-p2"
        },
        "installer-paths": {
            "sut/web/core": ["type:drupal-core"],
            "sut/web/libraries/{$name}": ["type:drupal-library"],
            "sut/web/modules/contrib/{$name}": ["type:drupal-module"],
            "sut/web/profiles/contrib/{$name}": ["type:drupal-profile"],
            "sut/web/themes/contrib/{$name}": ["type:drupal-theme"],
            "drush/Commands/{$name}": ["type:drupal-drush"]
        },
        "scenarios": {
            "drush8": {
                "require": {
                    "drush/drush": "dev-alias-process-adapter as 8.1.18",
                    "consolidation/site-alias": "^3.0.0-beta2",
                    "consolidation/site-process": "^2.0.0-beta6"
                }
            },
            "phpunit4": {
                "require-dev": {
                    "phpunit/phpunit": "^4.8.36"
                },
                "config": {
                    "platform": {
                        "php": "5.6"
                    }
                }
            }
        }
    }
}
